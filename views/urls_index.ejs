<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <%- include('partials/_headerincl'); %>
  <title>TinyApp</title>
</head>
<%- include('partials/_header'); %>
<body>
  <main style="margin: 1em;">
    <h3>My URLs</h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Short URL</th>
          <th scope="col">Long URL</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for(let url in urls) { %>
          <tr>
            <td><a href="/urls/<%= url %>"><%= url %></a></td>
            <td><%= urls[url] %></td>
            <td><form method="GET" action="/urls/<%= url %>/edit"><button type="submit" class="btn btn-primary">Edit</button></form></td>
            <td><form method="POST" action="/urls/<%= url %>/delete"><button type="submit" class="btn btn-primary">Delete</button></form></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </main>
  <%- include('partials/_footerincl'); %>
</body>
</html>
